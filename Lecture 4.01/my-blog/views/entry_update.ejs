<html>
    <head>
        
    </head>
    <body>
        <h1>Create a new blog entry</h1>
        <form method="post" action="/admin/entries/update/<%= id %>">
            <p>
                <label for="id">ID:</label>
                <span><%= id %></span>
            </p>
            <p>
                <label for="title">Title: </label>
                <input type="text" name="title" value="<%= entry.title %>"/>
            </p>
            <p>
                <label for="slug">Slug: </label>
                <input type="text" name="slug" value="<%= entry.slug %>"/>
            </p>
            <p>
                <label for="date">date: </label>
                <input type="text" name="date" value="<%= entry.date %>"/>
            </p>
            <p>
                <label for="text">text: </label>
                <textarea name="text"><%= entry.text %></textarea>
            </p>
            <input type="submit" />
            <input type="reset" />
        </form>
    </body>
</html>